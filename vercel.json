{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/help",
      "destination": "/index.html"
    },
    {
      "source": "/about",
      "destination": "/index.html"
    },
    {
      "source": "/terms",
      "destination": "/index.html"
    },
    {
      "source": "/privacy",
      "destination": "/index.html"
    },
    {
      "source": "/contact",
      "destination": "/index.html"
    },
    {
      "source": "/influencers",
      "destination": "/index.html"
    },
    {
      "source": "/tasks",
      "destination": "/index.html"
    },
    {
      "source": "/admin",
      "destination": "/index.html"
    },
    {
      "source": "/admin-login",
      "destination": "/index.html"
    },
    {
      "source": "/influencer-profile",
      "destination": "/index.html"
    },
    {
      "source": "/company-profile",
      "destination": "/index.html"
    },
    {
      "source": "/account-settings",
      "destination": "/index.html"
    },
    {
      "source": "/influencer-tasks",
      "destination": "/index.html"
    },
    {
      "source": "/company-tasks",
      "destination": "/index.html"
    },
    {
      "source": "/sms-test",
      "destination": "/index.html"
    },
    {
      "source": "/influencer/:id",
      "destination": "/index.html"
    },
    {
      "source": "/company/:id",
      "destination": "/index.html"
    },
    {
      "source": "/task/:id",
      "destination": "/index.html"
    },
    {
      "source": "/route-test/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/email-test",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/influencer/:id",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/company/:id",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/task/:id",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, stale-while-revalidate=600"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
} 